    <body>
        <section class='text-gray-600 font-inter bg-[#EBF5FF]'>
            <div
                class='container w-full h-full px-24 mx-auto flex flex-wrap items-center'
            >
                {{! Banner }}
                <div class='w-1/2 flex items-center justify-center'>
                    <img src='/img/signup.png' class='object-contain' />
                </div>

                {{! Sign Up Form 1 }}
                <div class='w-1/2 flex items-center justify-center'>
                    <div
                        class='w-[546] h-[553] bg-white rounded-3xl px-20 py-24 flex flex-col items-center'
                    >
                        <h2
                            class='text-primary text-3xl font-bold uppercase mb-5'
                        >Đăng ký</h2>
                        <div class='relative mb-6 w-full'>
                            <label
                                for='full-name'
                                class='text-xl font-normal text-[#212121] opacity-40'
                            >Họ tên</label>
                            <input
                                type='text'
                                id='full-name'
                                name='full-name'
                                class='w-full h-[48] bg-white rounded-xl border border-[#D9D7D7] focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'
                            />
                        </div>
                        <div class='relative mb-6 w-full'>
                            <label
                                for='mssv'
                                class='text-xl font-normal text-[#212121] opacity-40'
                            >MSSV</label>
                            <input
                                type='text'
                                id='mssv'
                                name='mssv'
                                class='w-full h-[48] bg-white rounded-xl border border-[#D9D7D7] focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'
                            />
                        </div>
                        <p class='text-xl font-normal text-[#212121] mb-6'>Bạn
                            đã có tài khoản
                            <a
                                href='/sign-up'
                                class='text-primary text-xl pl-1'
                            >Đăng nhập</a>
                        </p>
                        <button
                            class='w-[173] h-[43] text-primary flex items-center justify-center border-solid border-2 border-primary py-2 px-8 focus:outline-none rounded-xl text-lg hover:opacity-80'
                        >Tiếp tục</button>
                    </div>
                </div>

